<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shihab.tourmanagement.PostActivity"
    android:orientation="vertical"
    android:weightSum="1">


    <ImageButton
        android:id="@+id/moments_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/imgholder"
        android:scaleType="centerCrop"
        android:background="#eeeeee"
        android:scrollbars="vertical"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/title"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title..."
                android:background="@drawable/edittext_layoyt_outline"
                android:padding="15dp" />

            <EditText
                android:id="@+id/description"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description..."
                android:background="@drawable/edittext_layoyt_outline"
                android:padding="15dp"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="right|end"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@mipmap/ic_done"
                />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
