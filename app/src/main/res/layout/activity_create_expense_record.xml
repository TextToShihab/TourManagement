<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shihab.tourmanagement.CreateExpenseRecordActivity"
    android:padding="10dp"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Expense Record"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/EDetail"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Expense details"
        android:background="@drawable/edittext_layoyt_outline"
        android:padding="15dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/ECost"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Expense amount"
        android:background="@drawable/edittext_layoyt_outline"
        android:padding="15dp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/cDate"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Current date : dd/mm/yy"
        android:background="@drawable/edittext_layoyt_outline"
        android:padding="15dp"
        android:drawableRight="@mipmap/ic_action_date_range"
        android:inputType="date"
        />

    <EditText
        android:id="@+id/cTime"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Current time : hh:mm"
        android:background="@drawable/edittext_layoyt_outline"
        android:padding="15dp"
        android:drawableRight="@mipmap/ic_action_access_time"
        android:inputType="date"/>

    <Button
        android:id="@+id/createRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Record"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:background="@drawable/edittext_layoyt_outline"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

</LinearLayout>
